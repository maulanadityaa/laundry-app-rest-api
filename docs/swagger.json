    "definitions": {
        "request.LoginRequest": {
            "type": "object",
            "required": [
                "email",
                "password"
            ],
            "properties": {
                "email": {
                    "type": "string",
                    "example": "johndoe@example.com"
                },
                "password": {
                    "type": "string",
                    "example": "12345678"
                }
            }
        },
        "request.RegisterRequest": {
            "type": "object",
            "required": [
                "address",
                "email",
                "name",
                "password",
                "phoneNumber",
                "role"
            ],
            "properties": {
                "address": {
                    "type": "string",
                    "example": "Jl. Address No. 1"
                },
                "email": {
                    "type": "string",
                    "example": "johndoe@example.com"
                },
                "name": {
                    "type": "string",
                    "example": "John Doe"
                },
                "password": {
                    "type": "string",
                    "example": "12345678"
                },
                "phoneNumber": {
                    "type": "string",
                    "example": "081234567890"
                },
                "role": {
                    "type": "string",
                    "enum": [
                        "ROLE_CUSTOMER",
                        "ROLE_EMPLOYEE"
                    ],
                    "example": "ROLE_CUSTOMER"
                }
            }
        },
        "request.UserUpdateRequest": {
            "type": "object",
            "required": [
                "address",
                "id",
                "name",
                "phoneNumber"
            ],
            "properties": {
                "address": {
                    "type": "string",
                    "example": "Jl. Address No. 1"
                },
                "id": {
                    "type": "string",
                    "example": "ValidUUIDv4"
                },
                "name": {
                    "type": "string",
                    "example": "John Doe"
                },
                "phoneNumber": {
                    "type": "string",
                    "example": "081234567890"
                }
            }
        },
        "response.LoginResponse": {
            "type": "object",
            "properties": {
                "token": {
                    "type": "string",
                    "example": "ValidJWTToken"
                }
            }
        },
        "response.RegisterResponse": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "example": "johndoe@example.com"
                },
                "id": {
                    "type": "string",
                    "example": "ValidUUIDv4"
                },
                "role": {
                    "$ref": "#/definitions/response.RoleResponse"
                },
                "user": {
                    "$ref": "#/definitions/response.UserResponse"
                }
            }
        },
        "response.RoleResponse": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "example": "ValidUUIDv4"
                },
                "name": {
                    "type": "string",
                    "example": "ROLE_CUSTOMER"
                }
            }
        },
        "response.UserResponse": {
            "type": "object",
            "properties": {
                "address": {
                    "type": "string",
                    "example": "Jl. Address No. 1"
                },
                "createdAt": {
                    "type": "string",
                    "example": "2021-01-01T00:00:00Z"
                },
                "id": {
                    "type": "string",
                    "example": "ValidUUIDv4"
                },
                "name": {
                    "type": "string",
                    "example": "John Doe"
                },
                "phoneNumber": {
                    "type": "string",
                    "example": "081234567890"
                },
                "updatedAt": {
                    "type": "string",
                    "example": "2021-01-01T00:00:00Z"
                }
            }
        }
    },
    "securityDefinitions": {
        "BearerAuth": {
            "description": "Type \"Bearer\" followed by a space and your token",
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
